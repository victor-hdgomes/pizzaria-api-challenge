generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  USER
  ASSISTANT
}

enum AuthProvider {
  GOOGLE
}

model User {
  id        String       @id @default(uuid())
  googleId  String       @unique
  email     String       @unique
  name      String?
  avatarUrl String?
  provider  AuthProvider
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  messages  Message[]
}

model Message {
  id        String   @id @default(uuid())
  role      Role
  content   String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
